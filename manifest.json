{
  "manifest_version": 3,
  "name": "CodeSnip Editor",
  "version": "1.0.2",
  "description": "Mini editor estilo VSCode dentro do Chrome",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Abrir CodeSnip"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
